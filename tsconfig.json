{
  "compilerOptions": {
    "baseUrl": "src/",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src",
    "src/typings/svg.d.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
